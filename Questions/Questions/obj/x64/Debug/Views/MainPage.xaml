<Page
    x:Class="Questions.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Questions"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:Questions.ViewModels"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.DataContext>
        <vm:clsMainPageVM/>
    </Page.DataContext>

    <Page.Resources>
        <Storyboard x:ConnectionId='2' x:Name="myStoryboard">

            <ColorAnimation
                Storyboard.TargetName="{Binding NombreCajaPregunta}"
                Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                From="Transparent" To="{Binding ColorPregunta}" Duration="0:0:1"
                 />
        </Storyboard>

        <Storyboard x:ConnectionId='3' x:Name="rivalStoryboard">

            <ColorAnimation
                Storyboard.TargetName="{Binding NombreCajaPreguntaRival}"
                Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                From="Transparent" To="{Binding ColorPreguntaRival}" Duration="0:0:1"
                 />
        </Storyboard>
    </Page.Resources>

    <RelativePanel>

        <RelativePanel x:ConnectionId='4'
            Name="preguntasPropias"
            RelativePanel.AlignBottomWithPanel="True"
            RelativePanel.AlignTopWithPanel="True"
            RelativePanel.AlignLeftWithPanel="True"
            Width="140"
            Background="Gray">

            <TextBlock 
                RelativePanel.AlignLeftWithPanel="True"
                RelativePanel.AlignRightWithPanel="True"
                RelativePanel.AlignTopWithPanel="True"
                Text="Tú"
                FontSize="30"
                HorizontalAlignment="Center"
                Margin="20"/>

            <StackPanel
                RelativePanel.AlignLeftWithPanel="True"
                RelativePanel.AlignRightWithPanel="True"
                RelativePanel.AlignBottomWithPanel="True"
                Margin="40"
                >

                <Border x:ConnectionId='30'
                    x:Name="pregunta1"
                    Width="auto"
                    Height="50"
                    BorderBrush="Black"
                    BorderThickness="1"
                    Margin="0,5"
                    Background="Transparent">
                </Border>

                <Border x:ConnectionId='31'
                    x:Name="pregunta2"
                    Width="auto"
                    Height="50"
                    BorderBrush="Black"
                    BorderThickness="1"
                    Margin="0,5"
                    Background="Transparent">
                </Border>

                <Border x:ConnectionId='32'
                    x:Name="pregunta3"
                    Width="auto"
                    Height="50"
                    BorderBrush="Black"
                    BorderThickness="1"
                    Margin="0,5"
                    Background="Transparent">
                </Border>

                <Border x:ConnectionId='33'
                    x:Name="pregunta4"
                    Width="auto"
                    Height="50"
                    BorderBrush="Black"
                    BorderThickness="1"
                    Margin="0,5"
                    Background="Transparent">
                </Border>

                <Border x:ConnectionId='34'
                    x:Name="pregunta5"
                    Width="auto"
                    Height="50"
                    BorderBrush="Black"
                    BorderThickness="1"
                    Margin="0,5"
                    Background="Transparent">
                </Border>

                <Border x:ConnectionId='35'
                    x:Name="pregunta6"
                    Width="auto"
                    Height="50"
                    BorderBrush="Black"
                    BorderThickness="1"
                    Margin="0,5"
                    Background="Transparent">
                </Border>

                <Border x:ConnectionId='36'
                    x:Name="pregunta7"
                    Width="auto"
                    Height="50"
                    BorderBrush="Black"
                    BorderThickness="1"
                    Margin="0,5"
                    Background="Transparent">
                </Border>

                <Border x:ConnectionId='37'
                    x:Name="pregunta8"
                    Width="auto"
                    Height="50"
                    BorderBrush="Black"
                    BorderThickness="1"
                    Margin="0,5"
                    Background="Transparent">
                </Border>

                <Border x:ConnectionId='38'
                    x:Name="pregunta9"
                    Width="auto"
                    Height="50"
                    BorderBrush="Black"
                    BorderThickness="1"
                    Margin="0,5"
                    Background="Transparent">
                </Border>

                <Border x:ConnectionId='39'
                    x:Name="pregunta10"
                    Width="auto"
                    Height="50"
                    BorderBrush="Black"
                    BorderThickness="1"
                    Margin="0,5"
                    Background="Transparent">
                </Border>

            </StackPanel>

        </RelativePanel>

        <RelativePanel x:ConnectionId='5'
            Name="preguntasRival"
            RelativePanel.AlignBottomWithPanel="True"
            RelativePanel.AlignTopWithPanel="True"
            RelativePanel.AlignRightWithPanel="True"
            Width="140"
            Background="Gray">

            <TextBlock 
                RelativePanel.AlignLeftWithPanel="True"
                RelativePanel.AlignRightWithPanel="True"
                RelativePanel.AlignTopWithPanel="True"
                Text="Tu rival"
                FontSize="30"
                HorizontalAlignment="Center"
                Margin="20"/>

            <StackPanel
                RelativePanel.AlignLeftWithPanel="True"
                RelativePanel.AlignRightWithPanel="True"
                RelativePanel.AlignBottomWithPanel="True"
                Margin="40"
                >

                <Border x:ConnectionId='20'
                    x:Name="preguntaRival1"
                    Width="auto"
                    Height="50"
                    BorderBrush="Black"
                    BorderThickness="1"
                    Margin="0,5"
                    Background="Transparent">
                </Border>

                <Border x:ConnectionId='21'
                    x:Name="preguntaRival2"
                    Width="auto"
                    Height="50"
                    BorderBrush="Black"
                    BorderThickness="1"
                    Margin="0,5"
                    Background="Transparent">
                </Border>

                <Border x:ConnectionId='22'
                    x:Name="preguntaRival3"
                    Width="auto"
                    Height="50"
                    BorderBrush="Black"
                    BorderThickness="1"
                    Margin="0,5"
                    Background="Transparent">
                </Border>

                <Border x:ConnectionId='23'
                    x:Name="preguntaRival4"
                    Width="auto"
                    Height="50"
                    BorderBrush="Black"
                    BorderThickness="1"
                    Margin="0,5"
                    Background="Transparent">
                </Border>

                <Border x:ConnectionId='24'
                    x:Name="preguntaRival5"
                    Width="auto"
                    Height="50"
                    BorderBrush="Black"
                    BorderThickness="1"
                    Margin="0,5"
                    Background="Transparent">
                </Border>

                <Border x:ConnectionId='25'
                    x:Name="preguntaRival6"
                    Width="auto"
                    Height="50"
                    BorderBrush="Black"
                    BorderThickness="1"
                    Margin="0,5"
                    Background="Transparent">
                </Border>

                <Border x:ConnectionId='26'
                    x:Name="preguntaRival7"
                    Width="auto"
                    Height="50"
                    BorderBrush="Black"
                    BorderThickness="1"
                    Margin="0,5"
                    Background="Transparent">
                </Border>

                <Border x:ConnectionId='27'
                    x:Name="preguntaRival8"
                    Width="auto"
                    Height="50"
                    BorderBrush="Black"
                    BorderThickness="1"
                    Margin="0,5"
                    Background="Transparent">
                </Border>

                <Border x:ConnectionId='28'
                    x:Name="preguntaRival9"
                    Width="auto"
                    Height="50"
                    BorderBrush="Black"
                    BorderThickness="1"
                    Margin="0,5"
                    Background="Transparent">
                </Border>

                <Border x:ConnectionId='29'
                    x:Name="preguntaRival10"
                    Width="auto"
                    Height="50"
                    BorderBrush="Black"
                    BorderThickness="1"
                    Margin="0,5"
                    Background="Transparent">
                </Border>

            </StackPanel>

        </RelativePanel>

        <RelativePanel x:ConnectionId='6'
            RelativePanel.AlignBottomWithPanel="True"
            RelativePanel.AlignTopWithPanel="True"
            RelativePanel.RightOf="preguntasPropias"
            RelativePanel.LeftOf="preguntasRival"
            x:Name="framePartida">

            <StackPanel
                RelativePanel.AlignLeftWithPanel="True"
                RelativePanel.AlignRightWithPanel="True"
                RelativePanel.AlignTopWithPanel="True"
                HorizontalAlignment="Center"
                >

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Category:" Margin="20" FontSize="20"/>
                    <TextBlock Text="{Binding Category}" Margin="0,20,30,20" FontSize="20" />

                    <TextBlock Text="Pregunta:" Margin="20" FontSize="20" />
                    <TextBlock Text="{Binding NumeroPregunta}" FontSize="20" Margin="0,20,0,20"/>
                    <TextBlock Text="/10" FontSize="20" Margin="0,20,0,20" />
                </StackPanel>

            </StackPanel>

            <Border x:ConnectionId='14'
            Name="pregunta"
            Grid.Row="0"
            Background="Aquamarine"
            Grid.ColumnSpan="4"
            Margin="15"
            MinHeight="200"
            MinWidth="700"
            RelativePanel.AlignHorizontalCenterWithPanel="True"
            RelativePanel.AlignVerticalCenterWithPanel="True"
            BorderBrush="Brown"
            BorderThickness="2"
            CornerRadius="20">

                <TextBlock x:ConnectionId='19'
                Name="txtPregunta"
                Text="{Binding SelectedQuestion.question, Mode=TwoWay}"
                Foreground="Black"
                FontSize="18"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontStretch="UltraCondensed"
                />

            </Border>

            <StackPanel
            Orientation="Horizontal"
            RelativePanel.AlignLeftWithPanel="True"
            RelativePanel.AlignRightWithPanel="True"
            RelativePanel.AlignBottomWithPanel="True"
            HorizontalAlignment="Center"
            RelativePanel.Below="pregunta">

                <Border x:ConnectionId='15'
                HorizontalAlignment="Stretch"
                Name="respuesta1"
                Grid.Row="1"
                MinWidth="175"
                MaxHeight="200"
                Grid.Column="0"
                Background="LightCoral"
                Margin="15"
                                         
                >

                    <TextBlock
                    Text="{Binding SelectedQuestion.answers[0], Mode=TwoWay}"
                    Foreground="Black"
                    FontSize="15"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    FontStretch="UltraCondensed"
                    />

                </Border>

                <Border x:ConnectionId='16'
                HorizontalAlignment="Stretch"
                Name="respuesta2"
                Grid.Row="1"
                Grid.Column="1"
                Background="LightGreen"
                Margin="15"
                                         
                MinWidth="175"
                MaxHeight="200"
                >

                    <TextBlock
                    Text="{Binding SelectedQuestion.answers[1]}"
                    Foreground="Black"
                    FontSize="15"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    FontStretch="UltraCondensed"
                    />

                </Border>

                <Border x:ConnectionId='17'
                HorizontalAlignment="Stretch"
                Name="respuesta3"
                Grid.Row="1"
                Grid.Column="2"
                Background="LightSeaGreen"
                Margin="15"
                                         
                MinWidth="175"
                MaxHeight="200"
                >

                    <TextBlock
                    Text="{Binding SelectedQuestion.answers[2]}"
                    Foreground="Black"
                    FontSize="15"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    FontStretch="UltraCondensed"
                    />

                </Border>

                <Border x:ConnectionId='18'
                HorizontalAlignment="Stretch"
                Name="respuesta4"
                Grid.Row="1"
                Grid.Column="3"
                Background="LightGoldenrodYellow"
                Margin="15"
                                         
                MinWidth="175"
                MaxHeight="200"
                >

                    <TextBlock
                    Text="{Binding SelectedQuestion.answers[3]}"
                    Foreground="Black"
                    FontSize="15"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    FontStretch="UltraCondensed"
                    />

                </Border>

            </StackPanel>

            <TextBlock
            FontSize="25"
            Text="{Binding Notificacion}"
            Foreground="Green"
            RelativePanel.AlignLeftWithPanel="True"
            RelativePanel.AlignRightWithPanel="True"
            RelativePanel.AlignTopWithPanel="True"
            Margin="120"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            />

            <TextBlock
            FontSize="25"
            Text="{Binding PreguntasAcertadas}"
            Foreground="Green"
            RelativePanel.AlignRightWithPanel="True"
            RelativePanel.AlignTopWithPanel="True"
            Margin="25"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            />

            <TextBlock
            FontSize="25"
            Text="{Binding PreguntasFalladas}"
            Foreground="Red"
            RelativePanel.AlignLeftWithPanel="True"
            RelativePanel.AlignTopWithPanel="True"
            Margin="25"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            />

        </RelativePanel>

        <RelativePanel x:ConnectionId='7' 
            RelativePanel.AlignBottomWithPanel="True"
            RelativePanel.AlignTopWithPanel="True"
            RelativePanel.AlignLeftWithPanel="True"
            RelativePanel.AlignRightWithPanel="True"
            x:Name="esperandoRival">

            <StackPanel
                RelativePanel.AlignBottomWithPanel="True"
                RelativePanel.AlignTopWithPanel="True"
                RelativePanel.AlignLeftWithPanel="True"
                RelativePanel.AlignRightWithPanel="True"
                VerticalAlignment="Center">

                <StackPanel
                    Margin="40"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">

                    <TextBlock x:ConnectionId='12' 
                    Name="txtBuscandoRival"
                    Text="Buscando rival"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="30"/>

                    <ProgressRing x:ConnectionId='13' x:Name="progressRing" Margin="20"/>

                </StackPanel>

                

                <Button x:ConnectionId='11' 
                Content="Volver" 
                FontSize="20"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"                     />

            </StackPanel>
            
            

        </RelativePanel>

        <RelativePanel x:ConnectionId='8' 
            RelativePanel.AlignBottomWithPanel="True"
            RelativePanel.AlignTopWithPanel="True"
            RelativePanel.AlignLeftWithPanel="True"
            RelativePanel.AlignRightWithPanel="True"
            x:Name="esperandoQueContesteElRival">

            <StackPanel
                RelativePanel.AlignBottomWithPanel="True"
                RelativePanel.AlignTopWithPanel="True"
                RelativePanel.AlignLeftWithPanel="True"
                RelativePanel.AlignRightWithPanel="True"
                VerticalAlignment="Center">

                <StackPanel
                    Margin="40"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">

                    <TextBlock x:ConnectionId='9' 
                    Name="txtEsperandoQueContesteRival"
                    Text="Esperando que conteste el rival"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="30"/>

                    <ProgressRing x:ConnectionId='10' x:Name="progressRingRespuesta" Margin="20"/>

                </StackPanel>

            </StackPanel>



        </RelativePanel>


    </RelativePanel>

</Page>

